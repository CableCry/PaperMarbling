CompileFlags:
  Add: ["-Wall", "-Wextra", "-Wpedantic", "-std=c++20"]
  Remove: ["-Wpragma-pack"]

Index:
  Background: Build

Diagnostics:
  ClangTidy:
    Add: ["bugprone-*", "modernize-*", "performance-*", "readability-*"]
    Remove: ["readability-magic-numbers"]
    CheckOptions:
      modernize-use-trailing-return-type.UseAuto: true
